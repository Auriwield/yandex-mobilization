<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="66dp">


    <!-- make clickable boxes bigger to make them easy to hit -->
    <ImageView
        android:id="@+id/iv_favorite"
        android:layout_width="@dimen/icon_side_enlarge"
        android:layout_height="@dimen/icon_side_enlarge"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/inset_8dp"
        android:layout_marginStart="@dimen/inset_8dp"
        app:srcCompat="@drawable/ic_favorite_grey" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/list_margin"
        android:layout_marginEnd="@dimen/inset_16dp"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:layout_toStartOf="@+id/tv_direction"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Публиковать"
            android:textSize="@dimen/primary_text"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/tv_translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="время"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/secondary_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingEnd="@dimen/inset_16dp"
        android:textSize="12sp"
        android:text="RU - EN" />
</RelativeLayout>